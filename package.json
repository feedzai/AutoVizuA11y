{
	"name": "@feedzai/autovizua11y",
	"description": "AutoVizuA11y is a React library that automates the process of creating accessible data visualizations",
	"private": false,
	"version": "1.0.3",
	"author": "Feedzai",
	"license": "AGPL-3.0",
	"keywords": [
		"accessibility",
		"visualization",
		"dataviz",
		"react",
		"javascript"
	],
	"type": "module",
	"main": "dist/index.umd.cjs",
	"module": "dist/index.es.mjs",
	"exports": {
		".": {
			"import": "./dist/index.es.mjs",
			"require": "./dist/index.umd.cjs"
		},
		"./styles.css": "./dist/styles.css"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/feedzai/AutoVizuA11y.git"
	},
	"engines": {
		"node": ">= 18",
		"npm": ">= 8"
	},
	"scripts": {
		"build": "vite build",
		"postbuild": "size-limit",
		"format": "npx prettier --write '**/*.{jsx,ts,tsx,js}'",
		"reinstall": "rimraf node_modules && npm install",
		"test:ui": "vitest --ui",
		"test:watch": "vitest --watch",
		"test": "vitest run",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
	},
	"peerDependencies": {
		"react": ">= 17.0.2",
		"react-dom": ">= 17.0.2"
	},
	"dependencies": {
		"@feedzai/js-utilities": "^1.4.2",
		"react": ">= 17.0.2",
		"react-dom": ">= 17.0.2"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.0.2",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^14.2.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^20.11.20",
		"@types/react": "^18.2.56",
		"@types/react-dom": "^18.2.19",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"@visx/visx": "^3.8.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"@vitest/ui": "^1.3.1",
		"eslint": "^8.56.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"jsdom": "^24.0.0",
		"rimraf": "^5.0.5",
		"size-limit": "^11.0.2",
		"typescript": "^5.2.2",
		"vite": "^5.3.1",
		"vite-plugin-lib-inject-css": "^2.1.1",
		"vite-tsconfig-paths": "^4.3.1",
		"vitest": "^1.3.1"
	},
	"size-limit": [
		{
			"path": "dist/index.umd.cjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		},
		{
			"path": "dist/index.es.mjs",
			"limit": "10 kB",
			"ignore": [
				"fs"
			]
		}
	],
	"bugs": {
		"url": "https://github.com/feedzai/AutoVizuA11y/issues"
	},
	"homepage": "https://github.com/feedzai/AutoVizuA11y#readme"
}
